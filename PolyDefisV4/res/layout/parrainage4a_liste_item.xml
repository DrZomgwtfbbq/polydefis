<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/nomDemandeParrainage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/buttonAccepterParrainage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accepter"         
        android:background="@drawable/bouton_application"/>

    <Button
        android:id="@+id/buttonRefuserParrainage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/refuser" 
        android:background="@drawable/bouton_application"/>
</LinearLayout>
